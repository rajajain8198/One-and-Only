<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.HomeFragment">



    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/DP25"
        android:layout_marginRight="@dimen/DP25"
        android:weightSum="1"
        android:layout_marginTop="@dimen/DP10"
        app:layout_constraintBottom_toTopOf="@id/L_1_L"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/img_notes"
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:layout_marginRight="@dimen/DP10"
            android:layout_weight="0.5"
            android:background="@drawable/notes_new"
            android:src="@drawable/rounded_image_background"
            tools:ignore="Suspicious0dp" />

        <ImageButton
            android:id="@+id/img_chatting"
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:layout_marginLeft="@dimen/DP10"
            android:layout_weight="0.5"
            android:background="@drawable/chat"
            android:src="@drawable/rounded_image_background"
            tools:ignore="MissingConstraints,Suspicious0dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/L_1_L"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/DP25"
        android:layout_marginRight="@dimen/DP25"
        android:weightSum="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_1"
        app:layout_constraintBottom_toTopOf="@id/ll_2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Notes"
            android:layout_weight="0.45"
            android:textSize="@dimen/DP20"
            android:gravity="center"
            android:textColor="#000"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"

            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Let's Chat"
            android:layout_weight="0.45"
            android:gravity="center"
            android:textSize="@dimen/DP20"
            android:textColor="#000"
            android:textStyle="bold"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/DP25"
        android:layout_marginRight="@dimen/DP25"
        android:weightSum="1"
        app:layout_constraintBottom_toTopOf="@id/L_2_L"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/L_1_L">

        <ImageButton
            android:id="@+id/img_play_store"
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:layout_marginRight="@dimen/DP10"
            android:layout_weight="0.5"
            android:background="@drawable/playstore"
            android:src="@drawable/rounded_image_background"

            tools:ignore="Suspicious0dp" />

        <ImageButton
            android:id="@+id/img_pay_upi"
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:layout_marginLeft="@dimen/DP10"
            android:layout_weight="0.5"
            android:background="@drawable/upi"
            android:src="@drawable/rounded_image_background"

            tools:ignore="MissingConstraints,Suspicious0dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/L_2_L"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/DP25"
        android:layout_marginRight="@dimen/DP25"
        android:weightSum="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_2"
        app:layout_constraintBottom_toTopOf="@id/ll_3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Play Store"
            android:layout_weight="0.45"
            android:textSize="@dimen/DP20"
            android:gravity="center"
            android:textColor="#000"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"

            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Pay"
            android:layout_weight="0.45"
            android:gravity="center"
            android:textSize="@dimen/DP20"
            android:textColor="#000"
            android:textStyle="bold"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/DP25"
        android:layout_marginRight="@dimen/DP25"
        android:weightSum="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/L_2_L"
        app:layout_constraintBottom_toTopOf="@id/L_3_L"
        app:layout_constraintBottom_toBottomOf="parent">


        <ImageButton
            android:id="@+id/img_google_chrome"
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:layout_marginRight="@dimen/DP10"
            android:layout_weight="0.5"
            android:background="@drawable/search"
            android:src="@drawable/rounded_image_background"

            tools:ignore="Suspicious0dp" />

        <ImageButton
            android:id="@+id/img_knowledge_transfer"
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:layout_marginLeft="@dimen/DP10"
            android:layout_weight="0.5"
            android:background="@drawable/knowledge"
            android:src="@drawable/rounded_image_background"

            tools:ignore="MissingConstraints,Suspicious0dp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/L_3_L"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/DP25"
        android:layout_marginRight="@dimen/DP25"
        android:weightSum="1"
        android:layout_marginBottom="@dimen/DP10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_3"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Searching"
            android:layout_weight="0.45"
            android:textSize="@dimen/DP20"
            android:gravity="center"
            android:textColor="#000"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"

            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Let's Learn"
            android:layout_weight="0.45"
            android:gravity="center"
            android:textSize="@dimen/DP20"
            android:textColor="#000"
            android:textStyle="bold"
            />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
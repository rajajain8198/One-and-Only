<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/DP80"
    android:layout_margin="@dimen/DP15"
    android:background="@drawable/flower_background">

    <ImageView
        android:id="@+id/img_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/DP10"
        android:layout_marginTop="@dimen/DP15"
        android:background="@drawable/facebook_img"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TITLE"
        android:textColor="#000"
        android:textSize="@dimen/DP15"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/img_image"
        app:layout_constraintRight_toRightOf="@id/img_dots"
        app:layout_constraintTop_toTopOf="@id/img_image" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="Description"
        android:textSize="@dimen/DP15"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/tv_title"
        app:layout_constraintLeft_toRightOf="@id/img_image"
        app:layout_constraintRight_toRightOf="@id/tv_title"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <ImageView
        android:id="@+id/img_dots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/DP15"
        android:background="@drawable/arrow_up"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/img_image" />

    <CheckBox
        android:id="@+id/img_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/DP15"
        android:button="@drawable/checkbox"
        android:checked="false"
        app:layout_constraintLeft_toLeftOf="@id/img_dots"
        app:layout_constraintRight_toRightOf="@id/img_dots"
        app:layout_constraintTop_toBottomOf="@id/img_dots" />

</androidx.constraintlayout.widget.ConstraintLayout>